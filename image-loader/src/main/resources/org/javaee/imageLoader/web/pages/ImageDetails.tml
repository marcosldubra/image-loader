<html xmlns:t = "http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type = "Layout" t:pageTitle = "title">

	<h2>Update image</h2>
	<t:form t:id = "updateForm">
		<t:errors/>
		
		<t:label for="newFileName"/>
		<input t:type = "textField" t:id = "newFileName" t:value = "newFileName" validate = "required,regexp"/>
		<br/>
		
		<input t:type = "Submit" t:value = "${message:update}"/>
		<button><t:pageLink page = "Index">${message:close}</t:pageLink></button>
	</t:form>
   
</html>