<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.5" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
         	http://xmlns.jcp.org/xml/ns/javaee
		 	http://xmlns.jcp.org/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>Image Loader</display-name>
	
    <context-param>
		<param-name>tapestry.app-package</param-name>
		<param-value>org.javaee.imageLoader.web</param-value>
	</context-param>
    <context-param>
    	<param-name>contextConfigLocation</param-name> <!-- Indica a ruta o ficheiro de configuración de spring -->
    	<param-value>classpath:/spring-config.xml</param-value>
    </context-param>
    <context-param>
    	<param-name>tapestry.production-mode</param-name>
    	<param-value>false</param-value>
    </context-param>
    
    <!-- As etiquetas filter sirven para declarar filtros que se encargarán de seleccionar que componente
    debe procesar unha petición (Tapestry, Contenedor de servlets...)  -->
    
    <!-- ***********************************************************************
         Uncomment to enable "Open Sesion In View" -->
    <filter>
    	<filter-name>openSessionInView</filter-name>
    	<filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    	<init-param>
      		<param-name>sessionFactoryBeanName</param-name>
      		<param-value>sessionFactory</param-value>
    	</init-param>
  	</filter>
  	   <!--  ******************************************************************* -->
  		<!--  Este filtro procesa todas las peticiones relativas a Tapestry y pasa
			el resto de peticiones al contenedor de Servlets 
			Cuando se accede al directorio raíz de una aplicación Tapestry
			entonces envía la petición a la página Index.
			É un filtro de Spring que extende a TapestryFilter para permitir inyectar dependencias con Spring.
		-->
    <filter>
    	<filter-name>app</filter-name>
    	<filter-class>org.apache.tapestry5.spring.TapestrySpringFilter</filter-class>
    </filter>
    
    <!--  filter-mapping indica qué peticións debe procesar cada filtro -->
    
    <!-- *********************************************************************** 
         Uncomment to enable "Open Sesion In View"-->
    <filter-mapping>
    	<filter-name>openSessionInView</filter-name>
    	<url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- ******************************************************************* -->
    
	<filter-mapping>
		<filter-name>app</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>